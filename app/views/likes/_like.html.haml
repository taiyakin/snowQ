- if Like.find_by(user_id: current_user.id, answer_id: answer.id)
  = link_to question_answer_like_path(question_id: answer.question.id,answer_id: answer.id, id: answer.likes[0].id), method: :delete, remote: true do
    %i{class: "fas fa-heart"}
- else
  = link_to "/questions/#{answer.question.id}/answers/#{answer.id}/likes", method: :post, remote: true do
    %i{class: "far fa-heart"}
= answer.likes.length
