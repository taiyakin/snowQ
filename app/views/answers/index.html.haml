%h1 Listing answers

%table
  %thead
    %tr
      %th Text
      %th Video
      %th Image
      %th Question
      %th User
      %th
      %th
      %th

  %tbody
    - @answers.each do |answer|
      %tr
        %td= answer.text
        %td= answer.video
        %td= answer.image
        %td= answer.question
        %td= answer.user
        %td= link_to 'Show', answer
        %td= link_to 'Edit', edit_answer_path(answer)
        %td= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Answer', new_answer_path
