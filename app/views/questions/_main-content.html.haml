.main-content
  .main-content__top
    .main-content__top-genre ＞全てのジャンル
    .main-content__top-serch
      = form_with(url: search_questions_path, local: true, method: :get, class: "search-form") do |form|
        = form.text_field :keyword, placeholder: "投稿を検索する", class: "search-input"

    = render "users/login"

  .main-content__list
    - @questions .each do |question|
      = link_to "/questions/#{question.id}", class:"main-content__list__question" do
        .main-content__list__question-title
          = question.title
        .main-content__list__question-text
          = safe_join(question.text.split("\n"),tag(:br))
= paginate(@questions)

