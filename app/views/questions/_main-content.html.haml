.main-content
  .main-content__top
    .main-content__top-genre ＞全てのジャンル
    .main-content__top-serch

    = render "users/login"

  .main-content__list
    - @questions .each do |question|
      = link_to "/questions/#{question.id}", class:"main-content__list__question" do
        .main-content__list__question-title
          = question.title
        .main-content__list__question-text
          = question.text
          = safe_join(question.text.split("\n"),tag(:br))
= paginate(@questions)

